<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity__bind_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.android.pgb.Activity.Activity_Me.Activity_BindInfo">

    <com.android.pgb.View.CustomBar
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        custom:left_name="返回"
        custom:right_name=""
        custom:titlename="信息绑定">

    </com.android.pgb.View.CustomBar>

    <ViewStub
        android:id="@+id/phone_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout="@layout/bindphone" />

    <ViewStub
        android:id="@+id/email_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout="@layout/bindmail" />

    <ViewStub
        android:id="@+id/company_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout="@layout/bindcompany" />


</LinearLayout>
