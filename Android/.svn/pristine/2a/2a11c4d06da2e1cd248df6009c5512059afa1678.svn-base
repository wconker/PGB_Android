<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical">

    <TextView
        android:layout_marginLeft="15dp"
        android:id="@+id/gw"
        android:textSize="@dimen/text_size_level1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="评估人员" />

    <TextView
        android:id="@+id/bz"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:textSize="@dimen/text_size_level3"
        android:textColor="#6699ff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sj"
            android:textSize="@dimen/text_size_level4"
         android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2014-5-6 14:35;6" />

        <TextView
            android:textSize="@dimen/text_size_level4"
            android:id="@+id/gwxz"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/checkbox_border"
            android:padding="5dp"
            android:text="专职"
            android:textColor="@color/white" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/undo"
                android:visibility="gone"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:layout_width="20dp"
                android:src="@drawable/undo"
                android:layout_height="20dp"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_marginTop="@dimen/ui_10_dip"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="15dp"
        android:background="@color/gray" />
</LinearLayout>