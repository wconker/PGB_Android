<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_forget_pwd"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.android.pgb.Activity.Activity_ForgetPwd">

    <com.android.pgb.View.CustomBar
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        custom:left_name="返回"
        custom:right_visible="gone"
        custom:titlename="修改密码"></com.android.pgb.View.CustomBar>

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/f_phone_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@null"
            android:drawablePadding="@dimen/ui_10_dip"
            android:hint="手机号码"
            android:inputType="phone"
            android:maxLength="11"
            android:paddingBottom="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="0dp"
            android:paddingTop="12dp"
            android:textSize="@dimen/LargeTextSize" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/black" />

        <EditText
            android:id="@+id/f_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@null"
            android:drawablePadding="@dimen/ui_10_dip"
            android:drawableTintMode="screen"
            android:hint="新密码"
            android:paddingBottom="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="0dp"
            android:paddingTop="12dp"
            android:textSize="@dimen/LargeTextSize" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:paddingBottom="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="8dp"
            android:paddingTop="12dp">

            <EditText
                android:id="@+id/f_valid_et"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:background="@null"
                android:drawablePadding="@dimen/ui_10_dip"
                android:hint="输入验证码"

                android:inputType="number"
                android:textSize="@dimen/LargeTextSize" />

            <TextView
                android:id="@+id/f_getValid_b"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="@color/textorange"
                android:textSize="@dimen/LargeTextSize" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/black" />
    </LinearLayout>


    <Button
        android:id="@+id/register_submit_b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="35dp"
        android:background="@drawable/button_press"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_level1" />
</LinearLayout>
