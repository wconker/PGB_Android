<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity__resgister"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.android.pinggubang.Activity.Activity_Resgister">

    <com.android.pinggubang.View.CustomBar
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        custom:left_name="返回"
        custom:right_visible="gone"
        custom:titlename="新用户注册"></com.android.pinggubang.View.CustomBar>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <EditText
            android:id="@+id/register_account_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@null"
            android:drawablePadding="@dimen/ui_10_dip"
            android:hint="昵称"
            android:maxLength="11"
            android:paddingBottom="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="0dp"
            android:paddingTop="12dp"
            android:textSize="@dimen/LargeTextSize" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/black" />

        <EditText
            android:id="@+id/register_phone_et"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@null"
            android:drawablePadding="@dimen/ui_10_dip"
            android:drawableTintMode="screen"
            android:hint="手机号码"
            android:inputType="number"
            android:paddingBottom="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="0dp"
            android:paddingTop="12dp"
            android:textSize="@dimen/LargeTextSize" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/black" />

        <EditText
            android:id="@+id/register_password_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@null"
            android:drawablePadding="@dimen/ui_10_dip"

            android:hint="密码"
            android:inputType="textVisiblePassword"
            android:paddingBottom="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="0dp"
            android:paddingTop="12dp"
            android:password="true"
            android:textSize="@dimen/LargeTextSize" />

        <View

            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/black" />

        <EditText

            android:id="@+id/register_password_et_sam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@null"
            android:drawablePadding="@dimen/ui_10_dip"

            android:hint="重复密码"
            android:inputType="textVisiblePassword"
            android:paddingBottom="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="0dp"
            android:paddingTop="12dp"
            android:password="true"
            android:textSize="@dimen/LargeTextSize" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:paddingBottom="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="8dp"
            android:paddingTop="12dp">

            <EditText
                android:id="@+id/register_valid_et"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:background="@null"
                android:drawablePadding="@dimen/ui_10_dip"
                android:hint="输入验证码"

                android:inputType="number"
                android:textSize="@dimen/LargeTextSize" />

            <TextView
                android:id="@+id/register_getValid_b"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="@color/textorange"
                android:textSize="@dimen/LargeTextSize" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/usercontrol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignTop="@+id/login_bt"
            android:layout_centerHorizontal="true"
            android:text="@string/user_control" />
    </LinearLayout>

    <Button
        android:id="@+id/register_submit_b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/button_press"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_level1" />
</LinearLayout>
