<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/partLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:src="@drawable/doc"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/partCenter"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_weight="2">

        <TextView
            android:layout_marginTop="15dp"
            android:id="@+id/doc_title"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_level3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="程序员从入门到放弃" />

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:paddingBottom="10dp"
            android:layout_below="@+id/doc_title"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/down_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="59 人下载" />

            <TextView
                android:layout_marginLeft="15dp"
                android:id="@+id/doc_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3445kb" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="53dp"
        android:layout_height="80dp"
>

        <ImageView
            android:paddingBottom="10dp"
            android:id="@+id/down_icon"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:src="@drawable/download"
            android:layout_marginRight="@dimen/ui_10_dip"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

</LinearLayout>