                android:id="@+id/mybj_info_dj"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="单价：100 "
                android:textColor="#757575"
                android:textSize="@dimen/text_size_level4" />

            <TextView
                android:id="@+id/mybj_info_zj"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:background="#ffffcc"
                android:gravity="center"
                android:padding="5dp"
                android:text="总价：4678万元"
                android:textColor="#757575"
                android:textSize="@dimen/text_size_level4" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/redbag" />

            <TextView
                android:id="@+id/info_bc"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:gravity="bottom"
                android:text="￥15"
                android:textColor="#e64340" />

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_marginLeft="8dp"-->
                <!--android:gravity="bottom"-->
                <!--android:text="X"-->
                <!--android:textColor="#e64340" />-->

            <!--<TextView-->
                <!--android:id="@+id/info_jsbjtj"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_marginLeft="8dp"-->
                <!--android:gravity="bottom"-->
                <!--android:text=""-->
                <!--android:textColor="#e64340" />-->


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/info_lastTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="2017-03-08 16:19"
                android:textSize="12dp" />


            <TextView
                android:id="@+id/info_zt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:gravity="center"
                android:text="询价中"
                android:textColor="#dc9d20"
                android:textSize="12dp" />


        </LinearLayout>

